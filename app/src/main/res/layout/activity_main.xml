<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hlingsoft.sgg.MainActivity">
    <!--标题-->
    <include layout="@layout/layout_titilebar" />
    <!--主体-->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:orientation="horizontal"
        android:padding="5dp">


        <RadioButton
            android:id="@+id/rb_common_frame"
            android:drawableTop="@drawable/rb_common_frame_drawable_selector"
            android:textColor="@drawable/bottom_textcolor_drawable_selector"
            android:text="常用框架"
            style="@style/bottom_button_style"

            />

        <RadioButton
            android:id="@+id/rb_thirdparty_frame"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_dsf_frame_drawable_selector"
            android:text="第三方"
            android:textColor="@drawable/bottom_textcolor_drawable_selector" />
        <RadioButton
            android:id="@+id/rb_video_frame"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_video_frame_drawable_selector"
            android:text="自定义控件"
            android:textColor="@drawable/bottom_textcolor_drawable_selector" />

        <RadioButton
            android:id="@+id/rb_netvideo_frame"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_netvideo_frame_drawable_selector"
            android:text="其他"
            android:textColor="@drawable/bottom_textcolor_drawable_selector" />

    </RadioGroup>

</LinearLayout>
